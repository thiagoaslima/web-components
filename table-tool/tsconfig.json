{
    "compilerOptions": {
        "charset": "utf-8",
        "module": "UMD",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "allowUnreachableCode": false,
        "pretty": true,
        "watch": true,
    },
    "include": [
        "./src/js/**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ],
    "paths": {
        "@ibge/elements": [
            "../elements/"
        ],
        "*": [
            "node_modules/@types/*",
            "*"
        ]
    },
    "compileOnSave": true
}